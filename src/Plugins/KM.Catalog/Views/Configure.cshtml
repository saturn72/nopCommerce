@model ConfigurationModel

@using KM.Catalog.Models

@{
	Layout = "_ConfigurePlugin";
}

<form asp-controller="KmCatalog" asp-action="Configure" method="post">
	<section class="content">
		<div class="container-fluid">
			<div class="card card-default">
				<div class="card-body">
					@T("KM.Catalog.Configuration")
					<div class="card-body">
						<div class="card card-default">
							<div class="card-body">
								<div class="col-md-3">
									<nop-label asp-for="VendorId" />
								</div>
								<div class="col-md-9">
									<nop-select asp-for="VendorId" asp-items="Model.Vendors" />
									<span asp-validation-for="VendorId"></span>
								</div>
							</div>
							<div class="form-group row">
								<div class="col-md-9 offset-md-3">
									<button type="submit" class="btn btn-primary">@T("Admin.Common.Save")</button>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</form>