@model Nop.Plugin.ExternalAuth.Firebase.Models.ConfigurationModel

@inject Nop.Core.IWebHelper webHelper

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="FirebaseAuthentication" asp-action="Configure" method="post">
    <section class="content">
        <div class="container-fluid">
            <div class="card card-default">
                <div class="card-body">
                    @Html.Raw(string.Format(T("Plugins.ExternalAuth.Firebase.Instructions").Text, webHelper.GetStoreLocation()))
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ApiKey" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ApiKey" />
                            <span asp-validation-for="ApiKey"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="AuthDomain" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="AuthDomain" />
                            <span asp-validation-for="AuthDomain"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ProjectId" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ProjectId" />
                            <span asp-validation-for="ProjectId"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="AppId" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="AppId" />
                            <span asp-validation-for="AppId"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-9 offset-md-3">
                            <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>